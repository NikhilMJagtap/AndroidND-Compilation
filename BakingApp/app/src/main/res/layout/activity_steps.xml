<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/fragment_ingredients_container"
        android:name="ingredients.IngredientsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/fragment_steps_container"
        android:name="steps.StepsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_ingredients_container"
        app:layout_constraintTop_toBottomOf="@+id/fragment_ingredients_container"/>
    <TextView
        android:id="@+id/tv_eat"
        android:text="@string/that_s_it_time_to_eat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="32dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_steps_container"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>