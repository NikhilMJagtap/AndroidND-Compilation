<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin"
    android:elevation="@dimen/card_view_elevation"
    android:paddingBottom="@dimen/card_padding_vertical"
    android:theme="@style/Theme.MaterialComponents.Light"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/card_padding_horizontal"
        android:layout_marginLeft="@dimen/card_padding_horizontal">
        <ImageView
            android:id="@+id/rv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_image_height"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/article_image"/>
        <TextView
            android:id="@+id/rv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/title_news"
            android:textColor="@color/colorPrimaryText"
            app:layout_constraintTop_toBottomOf="@id/rv_image"
            android:layout_margin="@dimen/text_margin"
            android:textSize="@dimen/title_size"/>
        <TextView
            android:id="@+id/rv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/author_placeholder"
            android:paddingBottom="@dimen/card_padding_vertical"
            android:layout_margin="@dimen/text_margin"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintLeft_toLeftOf="@id/rv_image"
            app:layout_constraintTop_toBottomOf="@id/rv_title"/>

        <TextView
            android:id="@+id/rv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/source_placeholder"
            android:layout_margin="@dimen/text_margin"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintLeft_toRightOf="@id/rv_author"
            app:layout_constraintTop_toBottomOf="@id/rv_title"/>

        <TextView
            android:id="@+id/rv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/date_placeholder"
            android:layout_margin="@dimen/text_margin"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintLeft_toRightOf="@id/rv_source"
            app:layout_constraintTop_toBottomOf="@id/rv_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>